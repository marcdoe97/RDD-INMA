-- 01_schema.sql
-- Minimal runnable schema for the Supabase prototype
-- Extensions (usually available in Supabase, but safe to declare)
create extension if not exists pgcrypto;

create table if not exists public.apis (
  id uuid primary key default gen_random_uuid(),
  name text not null,
  version text not null,
  base_path text not null,
  domain text,
  owner text,
  description text,
  status text not null default 'draft'
    check (status in ('draft','published','deprecated')),
  created_at timestamp without time zone not null default now()
);

create table if not exists public.api_routes (
  id uuid primary key default gen_random_uuid(),
  api_id uuid not null references public.apis(id) on delete cascade,
  method text not null,
  path text not null,
  mock_response_json jsonb not null,
  status_code integer not null default 200,
  enabled boolean not null default true
);

create table if not exists public.api_logs (
  id uuid primary key default gen_random_uuid(),
  api_id uuid references public.apis(id) on delete set null,
  route_id uuid references public.api_routes(id) on delete set null,
  status_code integer,
  latency_ms integer,
  created_at timestamp without time zone not null default now(),
  method text,
  path text
);
